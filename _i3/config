# vim:filetype=i3
# i3 config file


font pango:FuraCode Nerd Font 12

# start a terminal
bindsym $mod+Return exec tilix

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id "rofi -combi-modi window,drun,run,ssh -show combi -modi combi"

set $mon1 "DP-0.1"
set $mon2 "DP-0.2.8"

# workaround for background getting corrupted
gaps inner 5
gaps outer 10 
smart_gaps on
for_window [class=".*"] border pixel 5
hide_edge_borders both

floating_modifier Mod1

set $mod Mod4
# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace work
bindsym $mod+2 workspace ide
bindsym $mod+3 workspace doc
bindsym $mod+4 workspace personal
bindsym $mod+5 workspace comms

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace work
bindsym $mod+Shift+2 move container to workspace ide
bindsym $mod+Shift+3 move container to workspace doc
bindsym $mod+Shift+4 move container to workspace personal
bindsym $mod+Shift+5 move container to workspace comms


workspace "work" output $mon1
workspace "ide" output $mon2
workspace "docs" output $mon2
workspace "personal" output $mon2
workspace "comms" output $mon2


# application -> workspace binding
for_window [class="Spotify"] move to workspace personal
for_window [class="jetbrains*"] move to workspace ide
for_window [class="Atom*"] move to workspace ide
for_window [class="Slack"] move to workspace comms
for_window [class="zoom"] move to workspace comms
for_window [title="WhatsApp.*"] move to workspace comms
for_window [class="Gnome-calendar"] move to workspace comms

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace
bindsym $mod+Shift+r restart
# enter fullscreen mode for the focused container

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# gruvbox colors
set $bg #282828
set $red #cc241d
set $green #98971a
set $brightgreen #b8bb26
set $yellow #d79921
set $brightyellow #fabd2f
set $blue #458588
set $aqua #689d68
set $brightaqua #8ec07c
set $gray #a89984
set $darkgray #1d2021
set $fg #ebdbb2
set $orange #d65d0e

#  horizontal screen
bar {
  output $mon2
  status_command py3status
  height 25
  i3bar_command i3bar -t
  separator_symbol  "|" 
  position top
  colors {
    background $bg
    statusline $fg
    focused_workspace    $yellow $yellow $darkgray
    inactive_workspace   $darkgray $darkgray $fg
    active_workspace     $darkgray $darkgray $yellow
    urgent_workspace     $red $red $bg
  }
}

#  vertical screen
bar {
  output primary
  status_command py3status -c ~/.i3status-mini.conf
  height 25
  i3bar_command i3bar -t 
  separator_symbol "|"  
  position top
  colors {
    background $bg
    statusline $yellow
    focused_workspace    $yellow $yellow $darkgray
    inactive_workspace   $darkgray $darkgray $yellow
    active_workspace     $darkgray $darkgray $yellow
    urgent_workspace     $red $red $bg
  }
  tray_output none
}
# class                 border|backgr|text|indicator|child_border
client.focused          $yellow $yellow $darkgray $yellow $yellow
client.focused_inactive $darkgray $gray $darkgray $darkgray $darkgray
client.unfocused        $darkgray $gray $darkgray $darkgray $darkgray
client.urgent           $red $red $white $red $red

# Set wallpaper (need to install feh)
exec_always feh --bg-scale /home/ali/_dev/_git/dotfiles/wallpapers/texture.png

# Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# media keys
bindsym XF86AudioPlay exec "~/.i3/media_keys.py play"
bindsym XF86AudioStop exec "~/.i3/media_keys.py stop"
bindsym XF86AudioPrev exec "~/.i3/media_keys.py prev"
bindsym XF86AudioNext exec "~/.i3/media_keys.py next"

# startup applications
exec --no-startup-id spotify
exec --no-startup-id slack
exec --no-startup-id solaar
exec --no-startup-id gnome-keyring-daemon --start
# enable fx
exec_always compton -f

# touchpad settings
exec_always --no-startup-id ~/.i3/touchpad.sh
# fix rotation
exec_always --no-startup-id ~/.screenlayout/default.sh
# custom notifications
exec_always --no-startup-id pkill dunst && dunst -config ~/.dunstrc
# autolock
exec_always xautolock -detectsleep -time 5 -locker "i3lock -d -t -i ~/_dev/_git/dotfiles/wallpapers/texture.png" -notify 30 -notifier "notify-send -u critical -t 10000 -- 'LOCKING screen in 30 seconds'"
