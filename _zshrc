export ZSH=$HOME/.oh-my-zsh
export ZSH_THEME=robbyrussell

alias ls=ls -G
export DISABLE_AUTO_TITLE="true"
plugins=(svn git)

PATH=/usr/local/bin:$PATH
PATH=$PATH:/Users/ali/_dev/sdks/android-sdk-mac_86/tools
PATH=$PATH:~/bin/
PATH=$PATH:/usr/local/bin
PATH=$PATH:/opt/local/include
PATH=$PATH:~/_qa/tools
PATH=$PATH:/opt/Ice-3.3.1-mac/bin
export PATH

export DYLD_LIBRARY_PATH=$DYLD_LIBRARY_PATH:/opt/Ice-3.3.1-mac/lib

export PYTHONPATH=/opt/Ice-3.3.1-mac/python:.:$PYTHONPATH

source $ZSH/oh-my-zsh.sh
export ANT_OPTS=-Xmx640m

fpath=($fpath /opt/local/share/doc/task/scripts/zsh)
autoload -Uz compinit
compinit
zstyle ':completion:*' verbose yes
zstyle ':completion:*:descriptions' format '%U%B%d%b%u'
zstyle ':completion:*' group-name ''
export TERM=xterm-256color
export FUSION_BASE_PATH=~/_dev/_git/fusion-in-a-box
source ~/.zshextras/themes/ali.zsh-theme

autoload -U compinit
compinit

autoload -U bashcompinit
bashcompinit

_nosetests()
{
    cur="${COMP_WORDS[COMP_CWORD]}"
    COMPREPLY=(`nosecomplete ${cur} 2>/dev/null`)
}
complete -o nospace -F _nosetests nosetests

