export ZSH=$HOME/.oh-my-zsh
export ZSH_THEME=robbyrussell
alias ls=ls -G
export EDITOR=vim
export DOCKER_HOST=tcp://127.0.0.1:4243
plugins=(git git-extras ruby rvm gem brew tmux colorize colored-man fabric python pip history-substring-search jsontools tmuxinator)
source $ZSH/oh-my-zsh.sh

PYTHONPATH=$PYTHONPATH:.
export PYTHONPATH=$PYTHONPATH:~/.vim/bundle/powerline
export TERM=xterm-256color
export LC_ALL=en_US.UTF-8
export LANG=en_US.utf8

source ~/.vim/bundle/powerline/powerline/bindings/zsh/powerline.zsh

if [ -e ~/.profile ];
then
    source ~/.profile ;
fi;

export PYENV_ROOT="$HOME/.pyenv"

typeset -aU path
path=( $path ~/.vim/bundle/powerline/scripts)
path=( /usr/local/bin $path)
path=( ~/.git-scripts $path)
path=( /usr/local/sbin $path)
path=( ~/bin $path)
path=( $PYENV_ROOT/bin $path)
path=( $PYENV_ROOT/shims $path)
path=( $HOME/.rvm/bin $path )

eval "$(pyenv init -)"

CLICOLOR=1
LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx

function set-aws-credentials 
{
    if [ -e ~/.aws-credentials/$1 ];
        then
            credentials=($(cat ~/.aws-credentials/$1 | tail -n 1 | awk -F "," '{print $2" "$3}'));
            export AWS_ACCESS_KEY_ID=$credentials[1];
            export AWS_SECRET_ACCESS_KEY=$credentials[2];
    else
        echo "Unable to located $1 credentials";
    fi;

}


