export ZSH=$HOME/.oh-my-zsh
export ZSH_THEME=robbyrussell
alias ls=ls -G
export EDITOR=vim
PYTHONPATH=.:$PYTHONPATH
export PYTHONPATH=$PYTHONPATH:~/.vim/bundle/powerline
export TERM=xterm-256color
export LC_ALL=en_US.UTF-8
export LANG=en_US.utf8
export PYENV_ROOT="$HOME/.pyenv"
export GOPATH=~/gohome
export GOROOT=$(go env GOROOT)
CLICOLOR=1
LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx

if [ -e ~/.profile ];
then
    source ~/.profile ;
fi;

plugins=(git git-extras ruby rvm gem brew tmux python pip history-substring-search jsontools pass tmuxinator)
source $ZSH/oh-my-zsh.sh
autoload -U url-quote-magic
zle -N self-insert url-quote-magic
source ~/.vim/bundle/powerline/powerline/bindings/zsh/powerline.zsh


typeset -aU path
path=( $path ~/.vim/bundle/powerline/scripts)
path=( /usr/local/bin $path)
path=( ~/.git-scripts $path)
path=( /usr/local/sbin $path)
path=( ~/bin $path)
path=( $GOPATH/bin $path)
path=( $GOROOT/bin $path)
path=( $PYENV_ROOT/bin $path)
path=( $PYENV_ROOT/shims $path)
path=( $HOME/.rbenv/bin $path)
eval "$(pyenv init -)"
eval "$(rbenv init -)"

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion



function set-aws-credentials 
{
    if [ -e ~/.aws-credentials/$1 ];
        then
            credentials=($(cat ~/.aws-credentials/$1 | tail -n 1 | awk -F "," '{print $2" "$3}'));
            export AWS_ACCESS_KEY_ID=$credentials[1];
            export AWS_SECRET_ACCESS_KEY=$credentials[2];
    else
        echo "Unable to located $1 credentials";
    fi;

}

alias ctags="`brew --prefix`/bin/ctags"
alias mux=tmuxinator
~/.vim/bundle/powerline/scripts/powerline-daemon
if [ -n "$TMUX" ];
then
    alias terminal-notifier='reattach-to-user-namespace terminal-notifier'
    alias ssh='reattach-to-user-namespace ssh'
fi;

